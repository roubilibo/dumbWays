<html>

	<head>
		<title>Personal Web</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
			integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
			crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
		<script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
			crossorigin="anonymous"></script>
	</head>

	<body>
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container">
				<a class="navbar-brand" href="/">
					<img src="/images/logo.png" id="image" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
					aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link " aria-current="page" href="/">Home</a>
						</li>
						{{#if loginCheck.isLogin}}
							<li class="nav-item ms-3">
								<a class="nav-link" href="/blog">Add Project</a>
							</li>
						{{else}}
						{{/if}}
					</ul>

					<div class="d-flex justify-content-end">
						<ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
							{{#if loginCheck.isLogin}}
								<li class="nav-item">
									<a class="nav-link fw-semibold text-danger active" href="#">Hello, {{loginCheck.user}}</a>
								</li>
								<li class="nav-item ms-3">
									<a class="nav-link" method="post" href="/logout">Logout</a>
								</li>
							{{else}}
								<li class="nav-item">
									<a class="nav-link" href="/register">Register</a>
								</li>
								<li class="nav-item ms-3">
									<a class="nav-link text-danger active fw-semibold" href="/login">Login</a>
								</li>
							{{/if}}
							<li class="nav-item ms-3">
								<a class="btn btn-danger btn-submit ms-5" href="/contact">Contact Me</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
		<div class="container my-5">
			<div class="container shadow bg-info-subtle rounded-3">
				<div class="row py-3 ">
					<div class="col-md-8 col-12 d-flex justify-content-center align-items-center">
						<img src="/{{blog.image}}" class="card-img-top" style="border-radius: 5px;" alt="...">
					</div>
					<div class="col-md-4 col-12 p-3 pt-0">
						<h1>{{blog.title}}</h1>
						<div class="d-flex justify-content-start fw-lighter">
							<p style="font-size: 13px;">post: {{blog.createdAt}}</p>
						</div>
						<h5 class=" fs-4" style="text-align: justify;"> {{blog.content}}</h5>
						<div class="technologies">
							<!-- blog.technologies -->
							{{#if blog.html}}
								<i class="fab fa-html5"></i>
							{{/if}}
							{{#if blog.css}}
								<i class="fab fa-css3-alt"></i>
							{{/if}}
							{{#if blog.js}}
								<i class="fab fa-js"></i>
							{{/if}}
							{{#if blog.njs}}
								<i class="fab fa-node"></i>
							{{/if}}
						</div>
						<hr>
						<div class="d-flex justify-content-start my-3">
							<!-- <div class="mr-3"> -->

							<p class="fw-bold ">
								Start:
							<div class="fw-normal mx-2">
								{{blog.startDate}}. -
							</div>
							</p>


							<p class="fw-bold ">
								End:
							<div class="fw-normal mx-2">
								{{blog.endDate}}.
							</div>
							</p>
							<!-- </div> -->

						</div>
						{{#if loginCheck.isLogin}}
							<div class="d-flex justify-content-md-end">
								<a href="/edit-blog/{{blog.id}}" style="text-decoration: none; margin-right: 25px;">
									<button class="btn btn-outline-success rounded-pill px-4 py-1 mb-md-4">EDIT</button>
								</a>
								<a href="/delete-blog/{{blog.id}}" style="text-decoration: none;">
									<button class="btn btn-outline-danger rounded-pill px-4 py-1 mb-md-4">DELETE</button>
								</a>
							</div>
						{{else}}
						{{/if}}
					</div>
				</div>
			</div>
		</div>
	</body>

</html>